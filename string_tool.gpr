project String_Tool is
	for Source_Dirs use ("src");
	for Object_Dir use "obj";
	for Main use ("string_tool.adb");
	for Exec_Dir use ".";

	package Builder is
		for Executable ("string_tool.adb") use "stringtool";
	end Builder;
	package Compiler is
		for Switches ("Ada") use ("-gnatwa", "-gnatVa", "-O2", "-march=native", "-gnat2022");
	end Compiler;

	package Binder is
		for Switches ("Ada") use ("-shared");
	end Binder;

end String_Tool;
