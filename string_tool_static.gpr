project String_Tool_Static is
	for Source_Dirs use ("src");
	for Object_Dir use "obj";
	for Main use ("string_tool.adb");
	for Exec_Dir use ".";

	package Builder is
		for Executable ("string_tool.adb") use "stringtool_static";
	end Builder;
	package Compiler is
		for Switches ("Ada") use ("-gnatwa", "-gnatyabCefiklmnprt", "-gnatVa", "-O2");
	end Compiler;

	package Binder is
		for Switches ("Ada") use ("-static");
	end Binder;

end String_Tool_Static;
